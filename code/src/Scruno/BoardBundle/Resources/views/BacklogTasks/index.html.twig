{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BacklogTasks list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Task</th>
                <th>Status</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr style="background: #{{ entity.task.type.color }};">
                <td><a href="{{ path('backlog_foo__show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.task.type }}</td>
                <td>{{ entity.task }}</td>
                <td>{{ entity.task.status }}</td>
                <td>{{ entity.position }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('backlog_foo__show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('backlog_foo__edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('task_new') }}">
                Create a new entry aaaa
            </a>
        </li>
    </ul>
    {% endblock %}
